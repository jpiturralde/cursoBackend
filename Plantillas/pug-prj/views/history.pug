doctype html
html
    include partials/head.pug
    body
        div(class="container mt-3")
            div(class="jumbotron")
                a(href='http://localhost:8080') Ingresar Producto
                br
                h1(style="color:blue;")='Vista de Productos'
                br

                if thereAreProducts
                    div(class="table-responsive")
                        table(class="table table-dark")
                            tr(style="color: yellow;")
                                th Nombre
                                th Precio
                                th Foto
                    
                            each product in products
                                tr
                                    td #{product.value.title}
                                    td #{product.value.price}
                                    td 
                                        img(src=product.value.thumbnail)
                else
                    h3(class="alert alert-danger")='No se encontraron productos.'
            
