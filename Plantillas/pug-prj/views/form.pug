html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css",
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l", crossorigin="anonymous")
        title='Productos'
    body
        div(class="container mt-3")
            div(class="jumbotron")
                a(href='http://localhost:8080/productos') Vista de Productos
                br
                h1(style="color:blue;")='Ingrese Producto'
                br
                form(role='form' method='POST' action='/productos')
                    div(class='form-group')
                        label(for='title') 
                            b Nombre
                        input#title.form-control(type='text', name='title')
                    div(class='form-group')
                        label(for='price') 
                            b Precio
                        input#price.form-control(type='text', name='price')
                    div(class='form-group')
                        label(for='thumbnail') 
                            b Foto URL
                        input#thumbnail.form-control(type='text', name='thumbnail')
                    button.btn.btn-success.mt-3.mb-5() Enviar
                        